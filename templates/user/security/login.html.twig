{% extends 'base.html.twig' %}
{% block body %}
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <div class="login-form">
                    go to register
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form method="post">
                    <div class="login-form">

                        <h4 class="login-title">Returning Customer</h4>
                        <p><span class="font-weight-bold">I am a returning customer</span></p>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label for="email">Enter your email address here...</label>
                                <input class="mb-0 form-control" type="email" id="inputEmail" name="email" value="{{ last_username }}" autocomplete="email" required autofocus
                                       placeholder="Enter you email address here...">
                            </div>
                            <div class="col-12 mb--20">
                                <label for="password">Password</label>
                                <input class="mb-0 form-control" type="password" name="password" id="inputPassword" placeholder="Enter your password" autocomplete="current-password" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="col-md-12">
                                <button class="btn btn-outlined" type="submit">
                                    Login
                                </button>
                            </div>
                        </div>

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

    {#                    <a href="{{ path('user_user_password_reset_begin') }}" class="btn btn-lg btn-primary">#}
    {#                        Reset password#}
    {#                    </a>#}
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
