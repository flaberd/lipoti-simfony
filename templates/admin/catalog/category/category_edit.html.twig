{% trans_default_domain 'admin' %}
{% extends 'base_admin.html.twig' %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="_float-sm-right">{% trans %}catalog.category_edit.page_title{% endtrans %}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb _float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('admin_dashboard') }}">
                                {% trans %}breadcrumbs.dashboard{% endtrans %}
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('admin_catalog_category_list') }}">
                                {% trans %}breadcrumbs.category_list{% endtrans %}
                            </a>
                        </li>
                        <li class="breadcrumb-item active">
                            {% trans %}breadcrumbs.category_edit{% endtrans %}
                        </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card card-primary col-12">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">
                                            {% trans %}catalog.category_edit.field_status{% endtrans %}
                                        </label>
                                        {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">
                                            {% trans %}catalog.category_edit.field_parent{% endtrans %}
                                        </label>
                                        {{ form_row(form.parent, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">
                                            {% trans %}catalog.category_edit.field_slug{% endtrans %}
                                        </label>
                                        {{ form_row(form.slug, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">
                                            {% trans %}catalog.category_edit.field_name{% endtrans %}
                                        </label>
                                        {% for key, item in form.translation %}
                                            <div>{{ key | locale_name(key) }} - {{ form_widget(item.name, {'attr': {'class': 'form-control'}}) }}</div>
                                        {% endfor %}
                                    </div>
                                    {{ form_widget(form.submit, {
                                        'attr': {
                                            'class': 'btn btn-primary'
                                        },
                                        'label': 'common.save_submit_btn' | trans
                                    }) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                        <!-- /.card-body -->
                    </div>
            </div>
        </div>
    </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}
